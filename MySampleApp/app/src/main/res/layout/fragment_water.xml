<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:textAlignment="center">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How Much Water Have You Drank Today?"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="false"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount Drank:"
        android:id="@+id/amountDrankTextView"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/addWaterButton"
        android:layout_marginBottom="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/amountDrankTextEdit"
        android:layout_alignEnd="@+id/amountDrankTextEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/amountDrankTextEdit"
        android:layout_above="@+id/addWaterButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBTRACT"
        android:id="@+id/subtractWaterButton"
        android:layout_alignTop="@+id/addWaterButton"
        android:layout_alignLeft="@+id/amountDrankTextEdit"
        android:layout_alignStart="@+id/amountDrankTextEdit" />
</RelativeLayout>
