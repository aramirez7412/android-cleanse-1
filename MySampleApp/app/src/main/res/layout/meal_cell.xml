<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/meal_cell_view"
    android:background="#AFC6C9">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mealCellImageView"
        android:src="@drawable/shaker_bottle"
        android:background="#AFC6C9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:id="@+id/mealHeader"
        android:layout_gravity="center"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/mealCellImageView"
        android:layout_toEndOf="@+id/mealCellImageView"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/mealCellImageView" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Shake"
        android:id="@+id/mealName"
        android:layout_gravity="center"
        android:layout_below="@+id/mealHeader"
        android:layout_alignLeft="@+id/mealHeader"
        android:layout_alignStart="@+id/mealHeader"
        android:layout_marginTop="30dp" />

</RelativeLayout>