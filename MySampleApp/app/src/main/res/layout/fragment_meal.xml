<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:textAlignment="center">

    <!-- TODO: Update blank fragment layout -->

    <include layout="@layout/scrollable_days_menu_fragment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/addMealLayout"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Did You Eat?"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:textSize="50sp"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/submitMealButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/mealTextField"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:textAlignment="center" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/mealSpinnerWidget"
            android:layout_alignTop="@+id/mealTextField"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="120dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mealListLayout"
        android:visibility="invisible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/mealListHeader"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:layout_marginBottom="25dp" />

            <ExpandableListView
                android:layout_width="wrap_content"
                android:layout_height="216dp"
                android:id="@+id/dailyMealListView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.98"
                android:paddingLeft="15dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ADD MEAL"
                android:id="@+id/addMealFromListButton"
                android:layout_alignBottom="@+id/dailyMealListView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|bottom" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
