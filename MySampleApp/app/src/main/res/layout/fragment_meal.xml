<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/testId"
    android:background="#AFC6C9"
    android:animateLayoutChanges="true">


    <ViewAnimator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myViewAnimator"
        android:visibility="visible"
        android:clickable="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout1"
            android:background="#AFC6C9"
            android:animateLayoutChanges="true"
            android:clickable="true">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/testListView"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/mealListDayHeader" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/mealListDayHeader"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="40sp"
                android:textAlignment="center"
                android:paddingLeft="25dp"
                android:gravity="center"
                android:background="#4C442D"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:paddingBottom="25dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="V"
                android:id="@+id/menuArrow"
                android:layout_alignBottom="@+id/mealListDayHeader"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout2"
            android:background="#AFC6C9"
            android:animateLayoutChanges="true"
            android:clickable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/mealListDayHeader2"
                android:textSize="40sp"
                android:textAlignment="center"
                android:paddingLeft="25dp"
                android:gravity="center"
                android:background="#4C442D"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:paddingBottom="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/testListView2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/mealListDayHeader2"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="V"
                android:id="@+id/menuArrow2"
                android:layout_above="@+id/testListView2"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </ViewAnimator>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4C442D"
        android:id="@+id/mealTrackerTopMenu"
        android:layout_alignParentTop="true"
        android:clickable="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mealTrackerTopMenuPage1"
            android:textAlignment="center"
            android:touchscreenBlocksFocus="false"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are currently on Day x of Day x of the &lt;---> Meal Plan!"
                android:id="@+id/dayOutOfDaysTextView"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_marginBottom="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today you have completed x out of x meals! Great Job!"
                android:layout_gravity="center_horizontal"
                android:id="@+id/mealOutOfMealTextView" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mealOutOfMealProgressBar"
                android:progress="5"
                android:max="14" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLICK TO VIEW OTHER PLANS"
                android:id="@+id/viewOtherPlansButton"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mealTrackerTopMenuPage2"
            android:visibility="invisible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meal Plan"
                android:textSize="50sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/material_grey_600"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meal Plan"
                android:textSize="50sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/material_grey_600"
                android:id="@+id/textView4"
                android:clickable="true"
                android:layout_marginBottom="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meal Plan"
                android:textSize="50sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/material_grey_600"
                android:id="@+id/textView5"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Not sure?"
                android:id="@+id/textView3"
                android:layout_above="@+id/takeQuizButton"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take the Quiz!"
                android:id="@+id/takeQuizButton"
                android:layout_above="@+id/upMenuButton"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="^"
            android:id="@+id/upMenuButton"
            android:textSize="25dp"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:translationZ="1dp"
            android:layout_alignParentRight="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/mealTrackerTopMenuPage2" />

    </RelativeLayout>

</RelativeLayout>
