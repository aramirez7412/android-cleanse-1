<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recipeBox">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#18577A"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/mealListDayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Day 1"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:typeface="serif"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1e7c7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="&quot;Be you and the world will adjust&quot; - Buddha"
                android:id="@+id/inspirationalQuoteTV"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mealList"></LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:id="@+id/waterTracker">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ounce8"
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageView9"
                    android:src="@drawable/bottle_8oz_sm"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:tint="#628799" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="8 oz"
                    android:id="@+id/textView12"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:layout_below="@+id/recipeButton"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:typeface="serif"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ounce16"
                android:layout_alignTop="@+id/ounce8"
                android:layout_toRightOf="@+id/ounce8"
                android:layout_toEndOf="@+id/ounce8">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageView10"
                    android:src="@drawable/bottle_16oz_sm"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:tint="#628799" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="16 oz"
                    android:id="@+id/textView13"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:layout_below="@+id/recipeButton"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ounce24"
                android:layout_alignTop="@+id/ounce16"
                android:layout_toRightOf="@+id/ounce16"
                android:layout_toEndOf="@+id/ounce16">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageView11"
                    android:src="@drawable/bottle_24oz_sm"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:tint="#628799" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="24 oz"
                    android:id="@+id/textView14"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:layout_below="@+id/recipeButton"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ounce32"
                android:layout_alignTop="@+id/ounce24"
                android:layout_toRightOf="@+id/ounce24"
                android:layout_toEndOf="@+id/ounce24"
                android:layout_marginRight="10dp">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:id="@+id/imageView12"
                    android:src="@drawable/bottle_32oz_sm"
                    android:scaleType="fitCenter"
                    android:paddingBottom="5dp"
                    android:tint="#628799" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="32 oz"
                    android:id="@+id/textView15"
                    android:layout_alignParentStart="true"
                    android:textSize="14sp"
                    android:layout_below="@+id/recipeButton"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:typeface="serif" />
            </LinearLayout>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="+"
                android:id="@+id/addOunceButton"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_above="@+id/subtractOunceButton"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#628799"
                android:background="#628799"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="-"
                android:id="@+id/subtractOunceButton"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_above="@+id/textView16"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#628799"
                android:background="#628799"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Add single oz"
                android:id="@+id/textView16"
                android:textSize="14sp"
                android:gravity="center"
                android:typeface="serif"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/ounce32"
                android:layout_toEndOf="@+id/ounce32"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap bottle size to add"
                android:id="@+id/textView17"
                android:typeface="serif"
                android:layout_above="@+id/addOunceButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumed 40 oz"
                android:id="@+id/ouncesToGoTextView"
                android:textStyle="bold"
                android:typeface="serif"
                android:textSize="14sp"
                android:layout_above="@+id/addOunceButton"
                android:layout_alignRight="@+id/textView16"
                android:layout_alignEnd="@+id/textView16" />

        </RelativeLayout>

    </LinearLayout>

    </ScrollView>
