<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.mysamplecleanseapp.SignInActivity"
    android:background="#ffffff">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/splashImage"
            android:scaleType="fitCenter"
            android:src="@mipmap/main_logo"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            >

        </ImageView>

        <TextView
            android:id="@+id/splashNameTextView"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:text="@string/app_name"
            android:textColor="@color/splash_text"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textSize="36dp" />

        <ImageButton
            android:id="@+id/fb_login_button"
            android:src="@drawable/selector_button_facebook"
            android:layout_width="@dimen/sign_in_button_width"
            android:layout_height="@dimen/sign_in_button_height"
            android:padding="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
