<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/listingImageView"
        android:layout_below="@+id/listingTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/listingTitleTextView"
        android:paddingLeft="5dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listingImageView"
        android:layout_toEndOf="@+id/listingImageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="item 1\nitem 2\nitem 3"
        android:id="@+id/listingRecipesTextView"
        android:layout_below="@+id/listingTitleTextView"
        android:layout_toRightOf="@+id/listingImageView"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.99"
        android:id="@+id/purchaseSetButton"
        android:layout_below="@+id/listingImageView"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignRight="@+id/listingImageView"
        android:layout_alignEnd="@+id/listingImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>