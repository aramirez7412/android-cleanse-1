<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/meal_cell_view">


    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/mealCellImageView"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:id="@+id/mealHeader"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:focusableInTouchMode="false"
        android:typeface="serif"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/mealName"
        android:layout_alignStart="@+id/mealName"
        android:layout_marginTop="7dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake"
        android:id="@+id/mealName"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:typeface="serif"
        android:layout_below="@+id/mealHeader"
        android:layout_toRightOf="@+id/mealCellImageView"
        android:layout_toEndOf="@+id/mealCellImageView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completeCheckBox"
        android:checked="false"
        android:layout_alignTop="@+id/mealHeader"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/mealName" />

</RelativeLayout>