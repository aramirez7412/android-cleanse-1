<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff" android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/planCompleteLayout"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONGRATULATIONS!\nYOU HAVE COMPLETED THE 10-DAY FAST METABOLISM CLEANSE!"
            android:id="@+id/textView"
            android:layout_gravity="left|center"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigate to settings to start a new plan."
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:typeface="serif"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/displayDayLayout"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day 1 of 10"
            android:id="@+id/dayTextView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textAlignment="gravity"
            android:layout_gravity="left|center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At a Glance:"
            android:id="@+id/textView5"
            android:layout_below="@+id/dayTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfasdf"
            android:id="@+id/atAGlanceTextView"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#bababa"
            android:textSize="14sp"
            android:typeface="serif"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Detox Fact:"
            android:id="@+id/textView8"
            android:layout_below="@+id/dayTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adsfadsf"
            android:id="@+id/dailyDetoxTextView"
            android:layout_below="@+id/atAGlanceTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#bababa"
            android:textSize="14sp"
            android:typeface="serif"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip of the Day:"
            android:id="@+id/textView9"
            android:layout_below="@+id/dayTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfasdf"
            android:id="@+id/dailyTipTextView"
            android:layout_below="@+id/dailyDetoxTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:textColor="#bababa"
            android:textSize="14sp"
            android:typeface="serif"
            android:layout_marginRight="5dp" />
    </LinearLayout>

</LinearLayout>